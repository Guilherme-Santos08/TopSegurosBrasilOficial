<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TopSegurosBrasil</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TopSegurosBrasil.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <div class="flex w-full">
        <div class="relative min-h-screen justify-center bg-science-blue-500">
            <div class="flex min-h-screen w-20 flex-col justify-between bg-science-blue-500 px-5 py-6 md:w-72">
                <div class="flex flex-col space-y-3 flex-1">
                    <div class="mb-6 flex items-center justify-between">
                        <div class="flex hidden flex-col font-medium text-white md:block">
                            <div class="opacity-90">Top Seguros Brasil</div>
                            <div class="text-xs opacity-70">Company: top.seguros.brasil</div>
                        </div>
                        <div class="relative cursor-pointer pr-6 text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 opacity-70 hover:scale-105" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                                <path d="M2 8c0-2.2.7-4.3 2-6"></path>
                                <path d="M22 8a10 10 0 0 0-2-6"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="hidden rounded-lg bg-white bg-opacity-10 text-white md:flex">
                    </div>
                    <!-- MENU -->
                    <ul class="flex flex-col space-y-2">
                        <li>
                            <a asp-area="" asp-controller="PlanoDoSeguros" asp-action="Index" class="group flex cursor-pointer justify-center space-x-3 rounded-lg bg-white bg-opacity-0 py-2 text-white hover:bg-opacity-10 hover:ring-1 md:justify-between md:px-3">
                                <div class="flex space-x-3">
                                    <span class="tranform w-5 opacity-70 duration-200 group-hover:scale-110 group-hover:opacity-90 inline-flex justify-center items-center">
                                        <i class="fa-solid fa-file"></i>
                                    </span>
                                    <div class="hidden opacity-70 group-hover:opacity-90 md:block">Planos</div>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="Clientes" asp-action="Index" class="group flex cursor-pointer justify-center space-x-3 rounded-lg bg-white bg-opacity-0 py-2 text-white hover:bg-opacity-10 hover:ring-1 md:justify-between md:px-3">
                                <div class="flex space-x-3">
                                    <span class="tranform w-5 opacity-70 duration-200 group-hover:scale-110 group-hover:opacity-90 inline-flex justify-center items-center">
                                        <i class="fa-solid fa-user"></i>
                                    </span>
                                    <div class="hidden opacity-70 group-hover:opacity-90 md:block">Clientes</div>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="Veiculos" asp-action="Index" class="group flex cursor-pointer justify-center space-x-3 rounded-lg bg-white bg-opacity-0 py-2 text-white hover:bg-opacity-10 hover:ring-1 md:justify-between md:px-3">
                                <div class="flex space-x-3">
                                    <span class="tranform w-5 opacity-70 duration-200 group-hover:scale-110 group-hover:opacity-90 inline-flex justify-center items-center">
                                        <i class="fa-solid fa-car"></i>
                                    </span>
                                    <div class="hidden opacity-70 group-hover:opacity-90 md:block">Veiculos</div>
                                </div>
                            </a>

                        </li>

                        <li>
                            <a asp-area="" asp-controller="Apolices" asp-action="Index" class="group flex cursor-pointer justify-center space-x-3 rounded-lg bg-white bg-opacity-0 py-2 text-white hover:bg-opacity-10 hover:ring-1 md:justify-between md:px-3">
                                <div class="flex space-x-3">
                                    <span class="tranform w-5 opacity-70 duration-200 group-hover:scale-110 group-hover:opacity-90 inline-flex justify-center items-center">
                                        <i class="fa-sharp fa-solid fa-shield"></i>
                                    </span>
                                    <div class="hidden opacity-70 group-hover:opacity-90 md:block">Seguros(Apolice)</div>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="Prestadors" asp-action="Index" class="group flex cursor-pointer justify-center space-x-3 rounded-lg bg-white bg-opacity-0 py-2 text-white hover:bg-opacity-10 hover:ring-1 md:justify-between md:px-3">
                                <div class="flex space-x-3">
                                    <span class="tranform w-5 opacity-70 duration-200 group-hover:scale-110 group-hover:opacity-90 inline-flex justify-center items-center">
                                        <i class="fa-solid fa-handshake-angle"></i>
                                    </span>
                                    <div class="hidden opacity-70 group-hover:opacity-90 md:block">Prestadores</div>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="Sinistros" asp-action="Index" class="group flex cursor-pointer justify-center space-x-3 rounded-lg bg-white bg-opacity-0 py-2 text-white hover:bg-opacity-10 hover:ring-1 md:justify-between md:px-3">
                                <div class="flex space-x-3">
                                    <span class="tranform w-5 opacity-70 duration-200 group-hover:scale-110 group-hover:opacity-90 inline-flex justify-center items-center">
                                        <i class="fa-solid fa-pen"></i>
                                    </span>
                                    <div class="hidden opacity-70 group-hover:opacity-90 md:block">Sinistros</div>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="Fabricantes" asp-action="Index" class="group flex cursor-pointer justify-center space-x-3 rounded-lg bg-white bg-opacity-0 py-2 text-white hover:bg-opacity-10 hover:ring-1 md:justify-between md:px-3">
                                <div class="flex space-x-3">
                                    <span class="tranform w-5 opacity-70 duration-200 group-hover:scale-110 group-hover:opacity-90 inline-flex justify-center items-center">
                                        <i class="fa-solid fa-industry"></i>
                                    </span>
                                    <div class="hidden opacity-70 group-hover:opacity-90 md:block">Fabricantes</div>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="AnoDosModelos" asp-action="Index" class="group flex cursor-pointer justify-center space-x-3 rounded-lg bg-white bg-opacity-0 py-2 text-white hover:bg-opacity-10 hover:ring-1 md:justify-between md:px-3">
                                <div class="flex space-x-3">
                                    <span class="tranform w-5 opacity-70 duration-200 group-hover:scale-110 group-hover:opacity-90 inline-flex justify-center items-center">
                                        <i class="fa-solid fa-calendar-days"></i>
                                    </span>
                                    <div class="hidden opacity-70 group-hover:opacity-90 md:block">Ano dos Modelos</div>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <div class="flex flex-col space-y-4 justify-end">
                        @*<div class="flex space-x-3">
                            <img src="https://picsum.photos/200" class="w-10 rounded-full ring-1 ring-science-blue-100" />
                            <div class="hidden text-white md:block">
                                <div class="font-medium opacity-90">Guilherme Ribeiro</div>
                                <div class="text-xs opacity-70">CEO, Top Seguros Brasil</div>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-14 max-w-[1120px] w-full mx-auto px-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
