@model TopSegurosBrasil.Models.Apolice

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 text-3xl font-extrabold tracking-tight leading-none text-gray-900">Deletar Apolice</h1>

<div>
    <div class="grid gap-6 mb-6 md:grid-cols-2">
        <div>
            <label for="DataInicioContrato" class="labelCreateClients">Inicio do Contrato</label>
            <input value="@Html.DisplayFor(model => model.DataInicioContrato)" type="date" id="DataInicioContrato" class="inputCreateClients" placeholder="" />
        </div>
        <div>
            <label for="DataVencimento" class="labelCreateClients">Validade do Contrato</label>
            <input value="@Html.DisplayFor(model => model.DataVencimento)" type="date" id="DataVencimento" class="inputCreateClients" placeholder="" />
        </div>
        <div>
            <label for="VeiculoId" class="labelCreateClients">Veiculo Id</label>
            <input value="@Html.DisplayFor(model => model.VeiculoId)" type="number" id="VeiculoId" class="inputCreateClients" placeholder="" />
        </div>
        <div>
            <label for="PlanoDoSeguroId" class="labelCreateClients">Plano do Seguro Id</label>
            <input value="@Html.DisplayFor(model => model.PlanoDoSeguro.NomeDoPlano)" type="number" id="PlanoDoSeguroId" class="inputCreateClients" placeholder="" />
        </div>
    </div>
</div>


<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Deletar</button>
    <a asp-action="Index" class="underline font-medium text-blue-600 dark:text-blue-500 hover:underline">Voltar para lista</a>
</form>

