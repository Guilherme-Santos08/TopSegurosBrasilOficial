<form asp-action="Create">
    <div class="grid gap-6 mb-6 md:grid-cols-2">
        <div>
            <label asp-for="Apolice.DataInicioContrato" for="DataInicioContrato" class="labelCreateClients">Inicio do Contrato</label>
            <input asp-for="Apolice.DataInicioContrato" type="date" id="DataInicioContrato" class="inputCreateClients" placeholder="" />
            <span asp-validation-for="Apolice.DataInicioContrato" class="mt-1 text-sm text-red-600 dark:text-red-500"></span>
        </div>
        <div>
            <label asp-for="Apolice.DataVencimento" for="DataVencimento" class="labelCreateClients">Validade do Contrato</label>
            <input asp-for="Apolice.DataVencimento" type="date" id="DataVencimento" class="inputCreateClients" placeholder="" />
            <span asp-validation-for="Apolice.DataVencimento" class="mt-1 text-sm text-red-600 dark:text-red-500"></span>
        </div>
        <div>
            <label asp-for="Apolice.VeiculoId" for="veiculo_id" class="labelCreateClients hidden">Veiculo Id</label>
            <input asp-for="Apolice.VeiculoId" type="number" id="veiculo_id" class="inputCreateClients hidden" placeholder="" />
            <span asp-validation-for="Apolice.VeiculoId" class="mt-1 text-sm text-red-600 dark:text-red-500"></span>
        </div>
        <div>
            <label asp-for="Apolice.PlanoDoSeguroId" for="PlanoDoSeguroId" class="labelCreateClients">Plano do Seguro Id</label>
            <select asp-for="Apolice.PlanoDoSeguroId" asp-items="@(new SelectList(Model.PlanoDoSeguros,"Id","NomeDoPlano"))" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"></select>
            <span asp-validation-for="Apolice.PlanoDoSeguroId" class="mt-1 text-sm text-red-600 dark:text-red-500"></span>
        </div>
    </div>
    <button type="submit" class="mb-3 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Cadastrar Cliente</button>
    <div>
        <a asp-action="Index" class="underline font-medium text-blue-600 dark:text-blue-500 hover:underline">Voltar para lista</a>
    </div>
</form>

<script type="text/javascript">
    const urlParams = new URLSearchParams(window.location.search);
    const myParam = urlParams.get('idVeiculo');

    const criandoApolice = document.getElementById("criando-apolice")
    const criandoApenasApolice = document.getElementById("criando-apenas-apolice")
    const veiculoIdInput = document.getElementById("veiculo_id")

    veiculoIdInput.value = myParam;

    if (myParam) {
        veiculoIdInput.disabled = true;
        criandoApolice.classList.add("block");
        criandoApolice.classList.remove("hidden");

        criandoApenasApolice.classList.add("hidden")
        criandoApenasApolice.classList.remove("block")
    } else {
        criandoApolice.classList.remove("block");
        criandoApolice.classList.add("hidden");

        criandoApenasApolice.classList.add("block")
        criandoApenasApolice.classList.remove("hidden")
    }

</script>

