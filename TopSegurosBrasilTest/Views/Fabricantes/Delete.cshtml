@model TopSegurosBrasil.Models.Fabricante

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 text-3xl font-extrabold tracking-tight leading-none text-gray-900">Excluir Fabricante</h1>

<div>
    <div class="grid gap-6 mb-6 md:grid-cols-2">
        <div>
            <label for="Id" class="labelCreateClients">Nome do Fabricante</label>
            <input value="@Html.DisplayFor(model => model.Id)" type="text" id="Id" class="inputCreateClients" placeholder="Nome do fabricante" disabled />
        </div>
        <div>
            <label for="NomeDoFabricante" class="labelCreateClients">Nome do Fabricante</label>
            <input value="@Html.DisplayFor(model => model.NomeDoFabricante)" type="text" id="NomeDoFabricante" class="inputCreateClients" placeholder="Nome do fabricante" disabled />
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Deletar</button>
    <a asp-action="Index" class="underline font-medium text-blue-600 dark:text-blue-500 hover:underline">Voltar para lista</a>
</form>