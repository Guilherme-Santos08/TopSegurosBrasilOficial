@model IEnumerable<TopSegurosBrasil.Models.Veiculo>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4 text-3xl font-extrabold tracking-tight leading-none text-gray-900">Gerenciar Veiculos</h1>

<nav class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50 mb-8" aria-label="Breadcrumb" id="criando-apenas-veiculo">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
            <a href="#" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
                Home
            </a>
        </li>
        <li aria-current="page">
            <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                <span class="ml-1 text-sm font-medium text-blue-600 md:ml-2">Tabela Veiculos</span>
            </div>
        </li>
    </ol>
</nav>

<p>
    <a asp-action="Create" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Criar Veiculo</a>
</p>

<div class="overflow-x-auto relative shadow-md sm:rounded-lg mt-3">
    <table class="w-full text-sm text-left text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th scope="col" class="py-3 px-6 text-center">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th scope="col" class="py-3 px-6 text-center">
                    @Html.DisplayNameFor(model => model.Chassi)
                </th>
                <th scope="col" class="py-3 px-6 text-center">
                    @Html.DisplayNameFor(model => model.Placa)
                </th>
                <th scope="col" class="py-3 px-6 text-center">
                    @Html.DisplayNameFor(model => model.ClienteId)
                </th>
                <th scope="col" class="py-3 px-6 text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-white border-b">
                    <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap text-center">
                        @Html.DisplayFor(modelItem => item.Id)
                    </th>

                    <td class="py-4 px-6 text-center">
                        @Html.DisplayFor(modelItem => item.Chassi)
                    </td>
                    <td class="py-4 px-6 text-center">
                        @Html.DisplayFor(modelItem => item.Placa)
                    </td>
                    <td class="py-4 px-6 text-center">
                        @Html.DisplayFor(modelItem => item.ClienteId)
                    </td>
                    <td class="py-4 px-6 text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="font-medium text-blue-600 hover:underline">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="font-medium text-blue-600 hover:underline">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="font-medium text-blue-600 hover:underline">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
